<?php
//mostrar los dÃ­as de la semana con un Switch

$dia=5;

Switch ($dia){

	case 1: print "Hoy es lunes";
	break;
	case 2: print "Hoy es martes";
	break;
	case 3: print "Hoy es miercoles";
	break;
	case 4: print "Hoy es jueves";
	break;
	case 5: print "Hoy es viernes. Empieza el fin de semana.";
	break;
	case 6: print "Hoy es sabado. Buen fin de semana";
	break;
	case 7: print "Hoy es domingo. Termina el fin de semana";
	break;

	default: print "Ese valor no tiene correspondencia";
	break;
}



?>
